<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qian.mapper.BlogMapper">


    <select id="getBlogsByContent" resultType="com.qian.pojo.Blog">
        select * from blog.blog b where b.blog_content like concat('%',#{content},'%')
    </select>

    <select id="getBlogCreatedLatestDay" resultType="java.sql.Date">
        SELECT blog_created FROM blog ORDER BY blog_created DESC LIMIT 1;
    </select>

</mapper>


